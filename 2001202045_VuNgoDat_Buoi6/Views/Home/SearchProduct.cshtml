@model IEnumerable<_2001202045_VuNgoDat_Buoi6.Models.Product>

@{
    ViewBag.Title = "SearchProduct";
    Layout = "~/Views/Shared/_SharedLayout.cshtml";
}

<h2>SearchProduct</h2>


<div>
    <form action="/Home/SearchProduct" method="post">
        <span style="text-">Tìm kiếm</span>
        <input type="text" name="txtSearch" value="" />
        <input type="submit" name="btnSubmit" value="Tìm" class="button" />
    </form>
</div>
@if (Model == null)
{
    <p style="font-weight: bold">Items not found!</p>
}
else
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FilePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="~/Contents/Images/@item.FilePath" alt="Bruh" style="width: 50px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
}
